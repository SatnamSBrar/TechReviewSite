@model IEnumerable<TechReviewMVC.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2>Reviews</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="CategoryPic">
                @if (item.Category.CategoryName == "Game Console")
                {
                    <div class="gameImage">
                        <img src="~/images/video-game-1856991_1280.png" class="img-responsive" />
                    </div>
                }
                else if (item.Category.CategoryName == "Mobile Device")
                {
                    <div class="mobileImage">
                        <img src="~/images/smartphone-1917228_1280.png" class="img-responsive" />
                    </div>
                }
                else if (item.Category.CategoryName == "Mac/PC")
                {
                    <div class="cpuImage">
                        <img src="~/images/monitor-155158_1280.png" class="img-responsive" />
                    </div>
                }
                else
                {
                    <div class="defaultImage">
                        <img src="~/images/monitor-155158_1280.png" class="img-responsive" />
                    </div>
                }
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <div class="caption">
                    <h4 class="category-header">Category:&nbsp;@Html.DisplayFor(modelItem => item.Category.CategoryName)</h4>
                    <h3 class="review-header">@Html.DisplayFor(modelItem => item.ReviewTitle)</h3>
                    <p class="review-author">@Html.DisplayFor(modelItem => item.Author)</p>
                    <p class="review-body">@Html.DisplayFor(modelItem => item.ReviewBody)</p>
                    <p class="review-date">Published:&nbsp;@Html.DisplayFor(modelItem => item.Date)</p>
                    <p>
                        @Html.ActionLink("Details", "Details", new { id = item.ReviewID }, new { @class = "btn btn-info", role = "button" })
                        @Html.ActionLink("Edit", "Edit", new { id = item.ReviewID }, new { @class = "btn btn-info", role = "button" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ReviewID }, new { @class = "btn btn-info", role = "button" })
                    </p>
                </div>
            </div>
        </div>
    }
</div>






